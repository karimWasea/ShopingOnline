@model ShoppingCartVM

<section class="h-100" style="background-color: #eee;">
    <div class="block">
        <a asp-action="Index" asp-controller="Home" class=" btn  btn-block btn-lg ">Continue Shopping</a>
    </div>
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
                    <div>
                        <p class="mb-0">
                            <span class="text-muted">Sort by:</span> <a href="#!" class="text-body">
                                price <i class="fas fa-angle-down mt-1"></i>
                            </a>
                        </p>
                    </div>                  
                </div>
                @foreach(var item in Model.ShoppingCartList)
                {
                    
               
                <div class="card rounded-3 mb-4">
                    <div class="card-body p-4">
                        <div class="row d-flex justify-content-between align-items-center">
                           @* <div class="col-md-2 col-lg-2 col-xl-2">
                                <img src="@item.product.ImageUrl"
                                     class="img-fluid rounded-3" style="height:90px;width:80%;" alt="Cotton T-shirt">
                            </div>*@
                            <div class="col-md-3 col-lg-3 col-xl-3">
                                <p class="lead fw-normal mb-2">@item.product.Title</p>
                                <p><span class="text-muted">@Html.Raw(@item.product.Description) </span></p>
                            </div>
                            <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                    <a class="btn btn-link px-2" asp-action="Minus" asp-route-CartId="@item.Id"
                                        onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                        <i class="bi bi-dash-square bg-primary"></i>
                                </a>

                                <input id="form1" min="0" name="quantity" readonly value="@item.Count" type="number"
                                       class="form-control form-control-sm" />

                                    <a class="btn btn-link px-2" asp-action="Pluse" asp-route-CartId="@item.Id"
                                        onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                    <i class="bi bi-plus-square bg-primary"></i>
                                </a>
                            </div>
                            <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                <h5 class="mb-0">@item.Price.ToString("c")</h5>
                            </div>                          
                            <div class="col-md-1 col-lg-1 col-xl-1 ">
                                    <a asp-action="Remove" asp-route-CartId="@item.Id" class="text-danger"><i class="bi bi-trash-fill"></i>    </a>
                            </div>
                        </div>  
                    </div>
                </div>

                }
                 

                <div class="card">
                    <div class="card-body text-center">
                        Total : @Model.OrderTotal.ToString("c")
                        <hr />
                        <a asp-action="Summary" class="btn btn-primary border-0 bg-gradient w-100 py-2">Summary</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>